<section class="hero py-16">
  <div class="container mx-auto flex items-center justify-between">
    <div class="w-1/2">
      <h6 class="text-lg"><em>Wanna Read ?</em></h6>
      <h1 class="text-3xl md:text-6xl font-bold">Don't wait !!!</h1>
      <button
        class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary"
      >
        Order Now
      </button>
    </div>
    <div class="w-1/2">
      <img src="/images/book.png" alt="" />
    </div>
  </div>
</section>
<section class="menu container mx-auto py-8">
  <h1 class="text-xl font-bold mb-8">All Books</h1>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 col-gap-12 row-gap-16"
  >
    <% books.forEach(function(book) { %>
    <div class="w-full md:w-64">
      <a href="/detail/<%=book._id%>"
        ><img class="h-40 mb-4 mx-auto" src="/images/<%= book.image %>" alt=""
      /></a>
      <div class="text-center">
        <a href="/detail/<%=book._id%>" class="mb-4 text-lg"
          ><%= book.name %></a
        >
        <span class="size py-1 px-4 rounded-full uppercase text-xs">
          <%= book.author %>
        </span>
        <div class="flex items-center justify-around mt-6">
          <span class="font-bold text-lg">â‚¹<%= book.price %></span>
          <button
            data-pizza="<%= JSON.stringify(book) %>"
            class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</section>
